<interface>
  <!-- interface-name mouse-macro-button.ui -->
  <requires lib="gtk" version="4.18"/>
  <template class="MouseMacroButton" parent="GtkBox">
    <child>
      <object class="GtkButton" id="button_name">
        <property name="action-name">app.select-macro</property>
        <property name="child">
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="hexpand">True</property>
            <property name="label" bind-source="MouseMacroButton" bind-property="name" bind-flags="bidirectional | sync-create"/>
          </object>
        </property>
        <property name="has-frame">False</property>
        <property name="hexpand">True</property>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="button_edit">
        <property name="has-frame">False</property>
        <property name="icon-name">document-edit-symbolic</property>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="button_delete">
        <property name="action-name">app.delete-macro</property>
        <property name="has-frame">False</property>
        <property name="icon-name">user-trash-symbolic</property>
      </object>
    </child>
  </template>
</interface>
